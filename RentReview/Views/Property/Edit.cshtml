@model RentReview.Models.ViewModels.ViewPropertyViewModel

<img src="@Model.Picture" />

<div class="info">
    <div class="card">
        <h5 class="card-header">Property Info</h5>
        <ul class="list-group">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label" for="Address">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Price">Price</label>
                    <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price">
                </div>
                <div class="buttons">
                    <div class="mb-3">
            <li class="list-group-item"> <a href="@Model.Url" class="btn btn-primary"> Go to Add</a></li>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>
            </form>
          </ul>
     </div>
</div>


<link rel="stylesheet" href="~/css/Property/Edit.css"></link>